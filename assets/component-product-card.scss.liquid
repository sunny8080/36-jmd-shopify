.jmd-product-card {
  width: 100%;
  height: 100%;
}

.jmd-product-card-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  min-height: fit-content;
  box-shadow: 0 0.063rem 0.375rem rgba(0, 0, 0, 0.15);
  border-radius: 4px 4px 0 0;
  overflow: hidden;

  .jmd-product-card__image {
    overflow: hidden;
    height: 60%;
    padding: 1rem;
    background: #e5e7f3;

    .card-product-image {
      width: 100%;
      height: 100%;
      object-fit: contain;
      object-position: center center;
      transition: scale 100ms ease-in;
    }

    &:hover {
      .card-product-image {
        scale: 1.3;
      }
    }
  }
}

.jmd-product-card-details {
  padding: 0.5rem 1rem;
  display: flex;
  flex-direction: column;
  gap: 4px;
  justify-content: space-between;
  height: 40%;
  min-height: min-content;
  background-color: aliceblue;

  .jmd-product-card-details-2 {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .jmd-product-card-details__title {
    text-transform: capitalize;
    font-weight: 500;
    min-height: 48px; // min 2 line
    display: -webkit-box;
    line-clamp: 2;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    @media screen and (max-width: 750px) {
      min-height: 42px; // min 2 line
    }
  }

  .jmd-product-card-details__vendor {
    color: #808080;
    text-transform: capitalize;
    display: -webkit-box;
    line-clamp: 1;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .jmd-product-card-details__price {
    .sell-price {
      font-weight: 600;
    }
    .original-price {
      font-weight: 500;

      s {
        text-decoration-thickness: 2px;
      }
    }
  }
}


.product-atc-btn {
  width: 80%;
  margin: 1rem auto 0.5rem auto;

  @media screen and (max-width: 750px) {
    width: 100%;
  }
}
