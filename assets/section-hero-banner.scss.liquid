.jmd-section.hero-banner-section{
  @media screen and (max-width: 800px) {
    padding: 0;
  }
}
.jmd-section .jmd-hero-banner {
  position: relative;
  height: 400px;
  margin: 5rem auto;
  &::after {
    content: "";
    position: absolute;
    top: 0;
    background: #000;
    z-index: 1;
    width: 100%;
    height: 100%;
    opacity: 0.6;
  }
}

.hero-banner__img {
  position: absolute;
  left: 0;
  top: 0;
  max-width: 100%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center center;
}

.hero-banner__content-wrapper {
  padding: 1rem;
  height: 100%;
  color: white;
  position: relative;
  width: 100%;
  z-index: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  &.hero-banner__content--top-left {
    align-items: start;
    justify-content: start;
  }
  &.hero-banner__content--top-center {
    align-items: start;
    justify-content: center;
  }
  &.hero-banner__content--top-right {
    align-items: start;
    justify-content: end;
  }

  &.hero-banner__content--middle-left {
    align-items: center;
    justify-content: start;
  }
  &.hero-banner__content--middle-center {
    align-items: center;
    justify-content: center;
  }
  &.hero-banner__content--middle-right {
    align-items: center;
    justify-content: end;
  }

  &.hero-banner__content--bottom-left {
    align-items: end;
    justify-content: start;
  }
  &.hero-banner__content--bottom-center {
    align-items: end;
    justify-content: center;
  }
  &.hero-banner__content--bottom-right {
    align-items: end;
    justify-content: end;
  }
}

.hero-banner__main-content {
  display: flex;
  flex-direction: column;
  gap: 5px;
  max-width: 700px;
  justify-content: center;
  align-items: start;

  @media screen and (min-width: 1024px) {
    max-width: 900px;
  }

  .short-desc {
    color: rgba(255, 255, 255, 0.75);
  }

  .heading {
    color: #fff;
  }

  &.hero-banner__main-content--left {
    align-items: start;
  }
  &.hero-banner__main-content--center {
    align-items: center;
  }
  &.hero-banner__main-content--right {
    align-items: end;
  }
}
