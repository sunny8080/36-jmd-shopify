.visually-hidden {
  position: absolute !important;
  overflow: hidden;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  border: 0;
  clip: rect(0 0 0 0);
  word-wrap: normal !important;
}

.skip-to-content-link:focus {
  margin: 5px;
  padding: 0 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
  border-radius: 5px;
  z-index: 9999;
  position: inherit;
  overflow: auto;
  width: auto;
  height: auto;
  clip: auto;
}

.jmd-btn-primary {
  a {
    display: inline-block;
    padding: 8px 16px;
    border-radius: 4px;
    background-color: antiquewhite;
    color: black;
    font-weight: 500;
    border: 1px solid black;
    cursor: pointer;
  }
}

.jmd-btn-secondary {
