.jmd-section.section-featured-collection {
  margin: 2rem auto;
}

.featured-collection-content-wrapper {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.featured-collection-desc {
  max-width: 75%;

  @media screen and (max-width: 1024px) {
    max-width: 100%;
  }
}

.featured-collection-products-wrapper {
  width: 100%;
}
.featured-collection-no-product-found {
  text-align: center;
  color: grey;
  font-size: 14px;
}

