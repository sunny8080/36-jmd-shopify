.mega-menu-mobile-container {
  .mega-menu-icon {
    display: inline-block;
    width: 30px;
    cursor: pointer;
  }
  .hamburger-icon {
    display: inline-block;
  }
  .cross-icon {
    display: none;
  }
  .jmd-hamburger::before {
    content: "";
    position: fixed;
    z-index: 100;
    left: 0;
    right: 0;
    top: var(--main-header-bottom-position, 110px);
    bottom: 0;
    width: 100%;
    height: calc(100vh - var(--main-header-bottom-position, 110px));
    background-color: rgba($color: #000000, $alpha: 0.5);
    opacity: 0;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }

  .mega-menu-mobile-wrapper {
    position: fixed;
    left: 100%;
    right: 0;
    top: var(--main-header-bottom-position, 110px);
    bottom: 0;
    z-index: 110;
    min-width: 300px;
    max-width: 100%;
    height: calc(100vh - var(--main-header-bottom-position, 110px));
    overflow-y: auto;
    background-color: #226980;
    color: #c4e7f3;
    transform: translateX(0);
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
    visibility: visible;
    opacity: 0;
  }

  &.menu-open {
    .hamburger-icon {
      display: none;
    }
    .cross-icon {
      display: inline-block;
    }
    .mega-menu-mobile-wrapper {
      opacity: 1;
      transform: translateX(-100%);
    }

    .jmd-hamburger::before {
      opacity: 1;
    }
  }
}

.mega-menu-mobile-wrapper nav {
  padding: 1rem;
}

ul.mega-menu-mobile-l1,
ul.mega-menu-mobile-l2,
ul.mega-menu-mobile-l3 {
  display: flex;
  flex-direction: column;
  gap: 5px;
  font-size: 20px;

  summary {
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    cursor: pointer;

    .caret-icon {
      margin-left: auto;
      display: inline-block;
      width: 1rem;
      height: auto;
      transition: transform 0.2s ease-out;
    }
  }

  details[open] {
    & > summary .caret-icon {
      transform: rotate(180deg);
    }
  }
}

li.mega-menu-mobile-l1-item.active,
li.mega-menu-mobile-l2-item.active,
li.mega-menu-mobile-l3-item.active {
  & > a,
  & > details > summary {
    color: #fff;
  }
}

.mega-menu-mobile-l2-wrapper,
.mega-menu-mobile-l3-wrapper {
  margin-left: 20px;
}
