.mega-menu-wrapper{
  margin-left: 3rem;
}
.header-mega-menu-l1 {
  display: flex;
  flex-direction: row;
  gap: 0 14px;
  font-weight: 500;

  li .mega-menu-l1-item.active {
    color: antiquewhite;
  }
}

details.mega-menu-l1-details {
  position: relative;

  summary.header-menu-details-item {
    cursor: pointer;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 4px;

    .caret-icon {
      display: inline-block;
      width: 1rem;
      height: auto;
      transition: transform 0.2s ease-out;
    }
  }

  &[open] {
    summary .caret-icon {
      transform: rotate(180deg);
    }
  }

  .header-mega-menu-l2 {
    box-shadow: 0 0 35px rgba(0, 0, 0, 0.1);
    position: absolute;
    top: 100%;
    background: burlywood;
    color: black;
    left: 0%;
    padding: 1rem 0 1rem 0;
    width: max-content;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: 5px 0rem;
    align-items: start;
  }
}

.mega-menu-l2-item-list {
  .mega-menu-l2-item {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 4px;
    position: relative;
    padding: 0 3rem 0 1rem;
    transition: color 0.3s ease-out;

    .caret-icon {
      display: inline-block;
      width: 12px;
      height: auto;
      transition: transform 0.2s ease-out;
    }

    &.active {
      color: blue;
    }
    &:hover {
      color: #1447e6;

      // .caret-icon {
      //   transform: rotate(180deg);
      // }
    }
  }

  .header-mega-menu-l3-wrapper {
    box-shadow: 0 0 35px rgba(0, 0, 0, 0.1);
    visibility: hidden;
    position: absolute;
    top: 5%;
    left: 98%;
    display: flex;
    flex-direction: row;

    .mega-menu-l3-proxy {
      width: 10px;
    }

    .mega-menu-l3 {
      background: burlywood;
      color: black;
      padding: 1rem 3rem 1rem 1rem;
      width: max-content;
      border-radius: 8px;
      display: flex;
      flex-direction: column;
      gap: 5px 0rem;
    }

    .mega-menu-l3-item {
      transition: color 0.3s ease-out;
      &.active {
        color: blue;
      }
      &:hover {
        color: #1447e6;
      }
    }
  }

  &:hover {
    .header-mega-menu-l3-wrapper {
      visibility: visible;
    }
  }
}
