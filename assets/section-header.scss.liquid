.jmd-section {
  width: 100%;
  max-width: 1200px;
  margin: 5rem auto;
  padding: 1rem;

  @media screen and (max-width: 1024) {
    max-width: 100%;
  }

  @media screen and (max-width: 600) {
    padding: 0.5rem;
  }
}

.jmd-header-wrapper {
  background-color: #39afd6;
}

.jmd-main-header {
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.jmd-logo {
  display: flex;
  flex-direction: column;
  gap: 2px;
  align-items: start;

  .jmd-logo-img {
    object-fit: cover;
  }

  .jmd-header-punchline {
    width: max-content;
    font-weight: 600;
  }
}

.jmd-header-mega-menu {
  .jmd-header-mega-menu_desktop {
    @media screen and (max-width: 900px) {
      display: none;
    }
  }

  .jmd-header-mega-menu_mobile {
    @media screen and (min-width: 900px) {
      display: none;
    }
  }
}

.jmd-header-right-menu-container {
  overflow-x: hidden;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: end;
  align-items: center;
  gap: 0 10px;

  @media screen and (max-width: 900px) {
    display: none;
  }
}

.jmd-header-search {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2px solid blue;
  gap: 5px;
  padding: 0 8px;

  .search-icon {
    display: flex;
    align-items: center;

    span {
      display: inline-block;
      width: 20px;
      height: 20px;
    }
  }

  .search-input {
    input {
      // height: 40px;
      padding: 2px 0;
      outline: none;
      max-width: 100px;
      transition: all 0.3s ease;

      // TODO - Input should grow when focused, use flex-grow for this
      &:focus {
        max-width: 200px;
      }
    }
  }
}

.jmd-header-avatar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 0 5px;

  a {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  span {
    display: inline-block;
    cursor: pointer;
    width: 30px;
    height: 30px;
  }
}

.jmd-header-login {
  a {
    display: inline-block;
    padding: 2px 10px;
    border-radius: 4px;
    background-color: antiquewhite;
    color: black;
    font-weight: 500;
    border: 1px solid black;
    cursor: pointer;
  }
}

.jmd-header-signup {
  a {
    display: inline-block;
    padding: 2px 10px;
    border-radius: 4px;
    background-color: black;
    color: antiquewhite;
    font-weight: 500;
    border: 1px solid black;
    cursor: pointer;
  }
}

.jmd-header-cart {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  span {
    width: 30px;
    height: 30px;
    cursor: pointer;
  }
}
